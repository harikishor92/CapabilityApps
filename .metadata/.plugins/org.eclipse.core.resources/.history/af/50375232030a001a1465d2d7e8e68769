package com.capability.qa.Pages;

import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;
import org.openqa.selenium.support.ui.Select;

import com.capability.qa.Base.BaseTest;

public class AddQuestionsPage extends BaseTest{
	
	@FindBy(xpath = "(//select[@class = 'form-control'])[1]")
	private WebElement selectTopic;
	
	@FindBy(xpath = "(//select[@class = 'form-control'])[2]")
	private WebElement selectComplexcity;
	
	@FindBy(xpath = "(//select[@class = 'form-control'])[3]")
	private WebElement selectType;
	
	@FindBy(xpath = "(//select[@class = 'form-control'])[4]")
	private WebElement selectChapter;
	
	@FindBy(xpath = "//textarea[@id='text']")
	private WebElement writeQuestion;
	
	@FindBy(xpath = "(//input[@class = 'form-control'])[1]")
	private WebElement optionA;
	
	@FindBy(xpath = "(//input[@class = 'form-control'])[2]")
	private WebElement optionB;
	
	@FindBy(xpath = "(//input[@class = 'form-control'])[3]")
	private WebElement optionC;
	
	@FindBy(xpath = "(//input[@class = 'form-control'])[4]")
	private WebElement optionD;
	
	public AddQuestionsPage()
	{
		PageFactory.initElements(driver, this);
	}
	
	
	public void selectTopicDropDown(String topic)
	{
		Select s1 = new Select(selectTopic);
		s1.selectByVisibleText(topic);
	}
	
	public void selectComplexcityDropDown(String complexcity)
	{
		Select s1 = new Select(selectComplexcity);
		s1.selectByVisibleText(complexcity);
	}
	
	public void selectTypeDropDown(String type)
	{
		Select s1 = new Select(selectType);
		s1.selectByVisibleText(type);
	}
	
	public void selectChapterDropDown(String chapter)
	{
		Select s1 = new Select(selectChapter);
		s1.selectByVisibleText(chapter);
	}
	
	public void writeQuestion(String que)
	{
		writeQuestion.sendKeys(que);
	}
	
	
	public void writeOptionA(String que)
	{
		optionA.sendKeys(que);
	}
	
	public void writeOptionB(String que)
	{
		optionB.sendKeys(que);
	}
	
	public void writeOptionC(String que)
	{
		optionC.sendKeys(que);
	}
	
	public void writeOptionD(String que)
	{
		optionD.sendKeys(que);
	}

}
